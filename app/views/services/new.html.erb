<h1>Create a New Service</h1>

<p>Please fill out the details for your new service.</p>

<form action="/services" method="post" class="col-md-6"> <!-- services#create -->
	<!-- <label for="service-title">Title</label> -->
	<input type="text" class="form-control" id="service-title" name="service[title]" placeholder="Title" maxlength="100" required><br>

	<!-- <label for="service-category">Category</label> -->
	Category
	<select name="service[category_id]" id="service-category">
		<% Category.all.each do |t| %>
			<option value="<%= t.id %>"><%= t.title %></option>
		<% end %>
	</select><br><br>

	<!-- <label for="service-describe">Description</label> -->
	<textarea type="text" class="form-control" id="service-describe" name="service[description]" placeholder="Describe your service" rows="5" required></textarea><br>

	<div>
	</div>

	<%= token_tag nil %>

	<button type="submit" class="btn btn-lg btn-success">Create!</button><br>
</form>